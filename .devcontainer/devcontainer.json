// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/php
{
	"name": "PHP",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/php:1-8.4-bullseye",

	"features": {
		"ghcr.io/devcontainers-extra/features/node-asdf:0": {}
	},
	
	"customizations": {
		"vscode": {
      		// Add the IDs of extensions you want installed when the container is created.
      		"extensions": [
        		"anthropic.claude-code"
      		]
    	}	
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [5173],

	"portsAttributes": {
		"8000": {
			"label": "Laravel",
			"onAutoForward": "notify"
		},
		"5173": {
			"label": "Vite",
			"onAutoForward": "silent",
			"visibility": "public"
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": {
        "sockets": "sudo -E docker-php-ext-install sockets",
		"packages": "sudo apt update -y || sudo apt install -y sqlite3 || sudo apt install -y git-lfs",
		"composer": "composer setup",
		"db": "touch database/database.sqlite",
		"migrate": "php artisan migrate --seed --seeder=DemoSeeder",
		"configure-env": "sh -c '[ -n \"${CODESPACE_NAME}\" ] && sed -i \"s~^APP_URL=.*~APP_URL=https://${CODESPACE_NAME}-8000.${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}~\" .env && { grep -q \"^VITE_DEV_SERVER_URL=\" .env && sed -i \"s~^VITE_DEV_SERVER_URL=.*~VITE_DEV_SERVER_URL=https://${CODESPACE_NAME}-5173.${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}~\" .env || printf \"\\nVITE_DEV_SERVER_URL=https://${CODESPACE_NAME}-5173.${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}\\n\" >> .env; } || true'",
        "link-storage": "php artisan storage:link"
    }
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
