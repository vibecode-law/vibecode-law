{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "vibecode-law/vibecode-law",
    "type": "project",
    "description": "The platform behind https://vibecode.law.",
    "keywords": [],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/fortify": "^1.30",
        "laravel/framework": "^12.0",
        "laravel/socialite": "^5.24",
        "laravel/tinker": "^2.10.1",
        "laravel/wayfinder": "^0.1.9",
        "league/flysystem-aws-s3-v3": "^3.30",
        "prism-php/prism": "^0.99.19",
        "resend/resend-laravel": "^1.1",
        "sentry/sentry-laravel": "^4.20",
        "spatie/laravel-data": "^4.18",
        "spatie/laravel-mailcoach-sdk": "^1.4",
        "spatie/laravel-permission": "^6.24",
        "spatie/laravel-typescript-transformer": "^2.5",
        "spatie/laravel-webhook-client": "^3.4"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/boost": "^2.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^4.3",
        "pestphp/pest-plugin-browser": "^4.2",
        "pestphp/pest-plugin-laravel": "^4.0",
        "spatie/laravel-ray": "^1.43"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Tests\\Fixtures\\": "tests/Fixtures"
        }
    },
    "scripts": {
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "npm install"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"npm run dev\" --names=server,vite --kill-others"
        ],
        "dev:ssr": [
            "npm run build:ssr",
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"php artisan inertia:start-ssr\" --names=server,queue,logs,ssr --kill-others"
        ],
        "format": [
            "pint --parallel"
        ],
        "lint": [
            "pint --parallel --test"
        ],
        "types": [
            "./vendor/bin/phpstan analyse"
        ],
        "definitions": [
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:models --nowrite --write-mixin",
            "@php artisan typescript:transform",
            "@php artisan wayfinder:generate --with-form"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test --parallel"
        ],
        "format-test": [
            "@format",
            "@types",
            "@test"
        ],
        "lint-test": [
            "@lint",
            "@types",
            "@test"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan boost:update --ansi"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ],
        "fresh-demo": [
            "@php artisan migrate:fresh --seed --seeder=DemoSeeder"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
